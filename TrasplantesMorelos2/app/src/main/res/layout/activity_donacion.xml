<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.trasplantesmorelos.Donacion"
    android:background="#eef6f5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Completo:"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:textColor="#060606" />

        <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:background="#8ba5ff"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testigo 1:"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
            android:textColor="#0d0d0d" />

        <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:background="#8ba5ff" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testigo 2:"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
            android:textColor="#0d0c11" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:background="#8ba5ff" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En caso de accidente llamar al tel:"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
            android:textColor="#170d14" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:background="#8ba5ff" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar y Fecha"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
            android:textColor="#171211" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:background="#8ba5ff"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Desea ser donador de sandre frecuente?"
            android:id="@+id/textView13"
            android:textColor="#0c090c"
            android:textSize="25dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si"
                android:id="@+id/radioButton"
                android:textColor="#140e18" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/radioButton2"
                android:textColor="#150b12" />
        </RadioGroup>

        <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/editText3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especifique:"
        android:id="@+id/textView8"
        android:textSize="25dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:textColor="#141011" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar datos"
        android:id="@+id/button"
        android:layout_below="@+id/editText2"
        android:layout_toEndOf="@+id/textView5"
        android:onClick="enviar"
        android:layout_gravity="center_horizontal" />

    </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce Los Datos"
        android:id="@+id/textView3"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#1d191b" />
</RelativeLayout>
